@model GetSliderDto

@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kayan Afiş Bilgisi Güncelleme</h4>
                <p class="card-subtitle mb-4">Kayan Afişler bölümünün güncelleme işlemini buradan gerçekleştirebilirsiniz.</p>

                <form method="post">
                    <input type="hidden" asp-for="SliderId" />
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>Alt Başlık</label>
                        <input type="text" class="form-control" asp-for="SubTitle">
                    </div>
                    <div class="form-group">
                        <label>Resim Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">
                        <i class="bi bi-pencil-square me-1"></i> Güncelle
                    </button>
                    <a href="/Slider/Index" class="btn btn-dark">
                        <i class="bi bi-arrow-left-circle me-1"></i> Geri
                    </a>                  
                </form>
            </div>
        </div>
    </div>
</div>
