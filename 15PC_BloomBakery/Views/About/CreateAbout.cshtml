@model CreateAboutDto

@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Hakkımızda Bilgisi Ekleme</h4>
                <p class="card-subtitle mb-4">Hakkımızda bölümünün ekleme işlemini buradan gerçekleştirebilirsiniz.</p>

                <form method="post">
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="form-group">
                        <label>Alt Başlık</label>
                        <input type="text" class="form-control" asp-for="SubTitle">
                    </div>
                    <div class="form-group">
                        <label>Özellik 1</label>
                        <input type="text" class="form-control" asp-for="Feature1">
                    </div>
                    <div class="form-group">
                        <label>Özellik 2</label>
                        <input type="text" class="form-control" asp-for="Feature2">
                    </div>
                    <div class="form-group">
                        <label>Özellik 3</label>
                        <input type="text" class="form-control" asp-for="Feature3">
                    </div>
                    <div class="form-group">
                        <label>Özellik 4</label>
                        <input type="text" class="form-control" asp-for="Feature4">
                    </div>
                    <div class="form-group">
                        <label>Resim Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Resim Url 2</label>
                        <input type="text" class="form-control" asp-for="ImageUrl2">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">
                        <i class="bi bi-plus-circle me-1"></i> Ekle
                    </button>
                    <a href="/About/Index" class="btn btn-dark">
                        <i class="bi bi-arrow-left-circle me-1"></i> Geri
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
